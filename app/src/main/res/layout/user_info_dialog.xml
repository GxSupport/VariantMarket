<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bottom_sheet_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/line"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/line_color"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_3sdp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_percent="0.95"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_weight="1"
                    android:text="@string/name"
                    android:textSize="@dimen/_8sdp"
                    android:textAllCaps="false"
                    android:textColor="@color/hintColor"
                    android:textStyle="normal"
                    android:fontFamily="@font/inter_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/name_edt"
                    android:inputType="text"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:textStyle="normal"
                    android:textColor="@color/text_color_app"
                    android:textSize="@dimen/_10sdp"
                    android:text="Dostonbek Eshmurodov"
                    android:fontFamily="@font/inter_medium"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:background="@drawable/edite_text_profile"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/email_tv"
                    android:layout_weight="1"
                    android:text="@string/email"
                    android:textSize="@dimen/_8sdp"
                    android:textAllCaps="false"
                    android:textColor="@color/hintColor"
                    android:textStyle="normal"
                    android:fontFamily="@font/inter_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/email_edt"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:textStyle="normal"
                    android:textColor="@color/text_color_app"
                    android:textSize="@dimen/_10sdp"
                    android:inputType="text"
                    android:text="eshmurodovdoston630@gmail.com"
                    android:fontFamily="@font/inter_medium"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:background="@drawable/edite_text_profile"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/phone_number_tv"
                    android:layout_weight="1"
                    android:text="@string/phone_number"
                    android:textSize="@dimen/_8sdp"
                    android:textAllCaps="false"
                    android:textColor="@color/hintColor"
                    android:textStyle="normal"
                    android:fontFamily="@font/inter_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <uz.gxteam.variantmarket.customLibrary.mask.MaskedEditText
                    android:id="@+id/phone_number_edt"
                    android:inputType="phone"
                    app:layout_constraintBottom_toTopOf="@id/password"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintVertical_bias="0.3"
                    app:layout_constraintWidth_percent="0.95"
                    android:background="@drawable/edite_text_profile"
                    android:paddingVertical="@dimen/_7sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal"
                    android:textColor="@color/text_color_app"
                    android:fontFamily="@font/inter_medium"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:typeface="normal"
                    app:allowed_chars="0123456789"
                    android:hint="0000000000000000"
                    app:mask="+### ## ### ## ##"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/location_tv"
                    android:layout_weight="1"
                    android:text="@string/location"
                    android:textSize="@dimen/_8sdp"
                    android:textAllCaps="false"
                    android:textColor="@color/hintColor"
                    android:textStyle="normal"
                    android:fontFamily="@font/inter_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/location_edt"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:textStyle="normal"
                    android:textColor="@color/text_color_app"
                    android:gravity="left|top"
                    android:textSize="@dimen/_10sdp"
                    android:text="Qashqadaryo viloyati Koson tumani Saripul maxallasi Feruza ko'chasi 1-uy"
                    android:fontFamily="@font/inter_medium"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:background="@drawable/edite_text_profile"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/gender_tv"
                    android:layout_weight="1"
                    android:text="@string/gender"
                    android:textSize="@dimen/_8sdp"
                    android:textAllCaps="false"
                    android:textColor="@color/hintColor"
                    android:textStyle="normal"
                    android:fontFamily="@font/inter_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RadioGroup
                    android:id="@+id/radio_group"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">
                    <RadioButton
                        android:id="@+id/man"
                        android:layout_weight="1"
                        android:textSize="@dimen/_10sdp"
                        android:text="@string/man"
                        android:checked="true"
                        android:paddingHorizontal="@dimen/_6sdp"
                        android:textColor="@color/text_color_app"
                        android:buttonTint="@color/icon_color_select"
                        android:textStyle="normal"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/woman"
                        android:layout_weight="1"
                        android:buttonTint="@color/icon_color_select"
                        android:textSize="@dimen/_10sdp"
                        android:text="@string/woman"
                        android:paddingHorizontal="@dimen/_6sdp"
                        android:textColor="@color/text_color_app"
                        android:textStyle="normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RadioGroup>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edit_btn"
                android:textStyle="normal"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:visibility="visible"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/inter_medium"
                android:textAllCaps="false"
                android:text="@string/edit"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/button_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>