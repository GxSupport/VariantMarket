<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:ms9_shadowTranslationZ="5dp"
        app:ms9_shadowElevation="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginVertical="@dimen/_8sdp"
            android:layout_marginHorizontal="@dimen/_6sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:outlineAmbientShadowColor="@color/app_background_hint"
            android:outlineSpotShadowColor="@color/app_background_hint"
            app:cardCornerRadius="@dimen/_6sdp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:targetApi="p">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_first"
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/_6sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:cardCornerRadius="@dimen/_14sdp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#807DAEFF"
                        app:layout_constraintHorizontal_bias="0.03"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp">
                        <ImageView
                            android:padding="@dimen/_7sdp"
                            android:id="@+id/image_data"
                            android:src="@drawable/ic_box"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        app:layout_constraintLeft_toRightOf="@id/card_icon"
                        app:layout_constraintTop_toTopOf="@id/card_icon"
                        app:layout_constraintBottom_toBottomOf="@id/card_icon"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/_6sdp"
                        app:layout_constraintRight_toLeftOf="@id/card_right"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/name"
                            android:textStyle="normal"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/text_color"
                            android:text="@string/app_name"
                            android:fontFamily="@font/inter_medium"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/date"
                            android:textStyle="normal"
                            android:textSize="@dimen/_7sdp"
                            android:textColor="@color/text_gray_color"
                            android:text="@string/app_name"
                            android:fontFamily="@font/inter_medium"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_right"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/card_icon"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="@id/card_icon"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintHorizontal_bias="0.96"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp">
                        <ImageView
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_right"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:id="@+id/line"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@color/hintColor"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_image"
                        app:cardCornerRadius="@dimen/_6sdp"
                        app:cardElevation="0dp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.05"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp">
                        <ImageView
                            android:id="@+id/image"
                            android:src="@drawable/a53"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        app:layout_constraintTop_toTopOf="@id/card_image"
                        app:layout_constraintLeft_toRightOf="@id/card_image"
                        app:layout_constraintRight_toRightOf="parent"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@id/card_image"
                        android:layout_marginHorizontal="@dimen/_6sdp"
                        android:layout_width="0dp"
                        android:layout_height="0dp">
                        <TextView
                            android:id="@+id/title_product"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/text_color"
                            android:textStyle="normal"
                            android:text="@string/app_name"
                            android:fontFamily="@font/inter_medium"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/size"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/text_color"
                                android:textStyle="normal"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:text="size: L"
                                android:fontFamily="@font/inter_medium"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/color"
                                android:layout_weight="1"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/text_color"
                                android:textStyle="normal"
                                android:text="Color: White"
                                android:fontFamily="@font/inter_medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <View
                        android:id="@+id/line2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@color/hintColor"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_14sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_height="match_parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/cancel_btn"
                            app:layout_constraintHorizontal_bias="0"
                            android:textStyle="normal"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_9sdp"
                            android:fontFamily="@font/inter_medium"
                            android:text="Bekor qilish"
                            android:textAllCaps="false"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@drawable/order_button_back"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintWidth_percent="0.7"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/ok_btn"
                            app:layout_constraintHorizontal_bias="1"
                            android:textStyle="normal"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_9sdp"
                            android:fontFamily="@font/inter_medium"
                            android:text="Sotib olish"
                            android:textAllCaps="false"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@drawable/order_button_back"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintWidth_percent="0.7"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
    </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
</androidx.constraintlayout.widget.ConstraintLayout>