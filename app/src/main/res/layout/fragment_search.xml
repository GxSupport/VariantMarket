<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.searchView.SearchFragment">
    <include
        android:id="@+id/include_search"
        layout="@layout/shimmer_search"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_view"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/search_linear"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/input_text_style"
            app:layout_constraintWidth_percent="0.92"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp">
            <EditText
                android:id="@+id/searchInput"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_6sdp"
                android:paddingRight="@dimen/_6sdp"
                android:hint="@string/search"
                android:textColor="@color/text_color_app"
                android:textStyle="normal"
                android:inputType="text"
                android:fontFamily="@font/inter_regular"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/clear_input"
                android:layout_weight="10"
                android:padding="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/ic_clear_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_search"
            app:layout_constraintTop_toBottomOf="@id/search_linear"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_search"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>