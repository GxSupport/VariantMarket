<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.homeScreen.view.profil.ProfilFragment">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_40sdp"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_profile"
                android:scaleType="centerCrop"
                android:src="@drawable/user_profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/edite"
                app:cardElevation="@dimen/_2sdp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
                app:cardCornerRadius="@dimen/_10sdp"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintVertical_bias="0.9"
                android:layout_marginEnd="@dimen/_6sdp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp">
                <ImageView
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_edit_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/card_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
      <androidx.appcompat.widget.LinearLayoutCompat
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/name_tv"
              android:layout_weight="1"
              android:text="@string/name"
              android:textSize="@dimen/_8sdp"
              android:textAllCaps="false"
              android:textColor="@color/hintColor"
              android:textStyle="normal"
              android:fontFamily="@font/inter_medium"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
          <EditText
              android:id="@+id/name_edt"
              android:inputType="text"
              android:enabled="false"
              android:layout_marginTop="@dimen/_5sdp"
              android:paddingVertical="@dimen/_8sdp"
              android:textStyle="normal"
              android:textColor="@color/text_color"
              android:textSize="@dimen/_10sdp"
              android:text="Dostonbek Eshmurodov"
              android:fontFamily="@font/inter_medium"
              android:paddingHorizontal="@dimen/_6sdp"
              android:background="@drawable/edite_text_profile"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
      </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/email_tv"
                android:layout_weight="1"
                android:text="@string/email"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="false"
                android:textColor="@color/hintColor"
                android:textStyle="normal"
                android:fontFamily="@font/inter_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/email_edt"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:textStyle="normal"
                android:enabled="false"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10sdp"
                android:inputType="text"
                android:text="eshmurodovdoston630@gmail.com"
                android:fontFamily="@font/inter_medium"
                android:paddingHorizontal="@dimen/_6sdp"
                android:background="@drawable/edite_text_profile"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/phone_number_tv"
                android:layout_weight="1"
                android:text="@string/phone_number"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="false"
                android:textColor="@color/hintColor"
                android:textStyle="normal"
                android:fontFamily="@font/inter_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/phone_number_edt"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:textStyle="normal"
                android:enabled="false"
                android:inputType="phone"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10sdp"
                android:text="+998 99 420 62 78"
                android:fontFamily="@font/inter_medium"
                android:paddingHorizontal="@dimen/_6sdp"
                android:background="@drawable/edite_text_profile"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/location_tv"
                android:layout_weight="1"
                android:text="@string/location"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="false"
                android:textColor="@color/hintColor"
                android:textStyle="normal"
                android:fontFamily="@font/inter_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/location_edt"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:textStyle="normal"
                android:textColor="@color/text_color"
                android:enabled="false"
                android:gravity="left|top"
                android:textSize="@dimen/_10sdp"
                android:text="Qashqadaryo viloyati Koson tumani Saripul maxallasi Feruza ko'chasi 1-uy"
                android:fontFamily="@font/inter_medium"
                android:paddingHorizontal="@dimen/_6sdp"
                android:background="@drawable/edite_text_profile"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/gender_tv"
                android:layout_weight="1"
                android:text="@string/gender"
                android:textSize="@dimen/_10sdp"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:fontFamily="@font/inter_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioGroup
                android:id="@+id/radio_group"
                android:enabled="false"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/man"
                    android:layout_weight="1"
                    android:textSize="@dimen/_10sdp"
                    android:text="@string/man"
                    android:checked="true"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:textColor="@color/text_color"
                    android:buttonTint="@color/app_background"
                    android:textStyle="normal"
                    android:fontFamily="@font/inter_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/woman"
                    android:layout_weight="1"
                    android:buttonTint="@color/app_background"
                    android:textSize="@dimen/_10sdp"
                    android:text="@string/woman"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:textColor="@color/text_color"
                    android:textStyle="normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RadioGroup>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit_btn"
            android:textStyle="normal"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:fontFamily="@font/inter_medium"
            android:textAllCaps="false"
            android:text="@string/edit"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/button_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>