<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.comment.CommentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_tool"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <androidx.cardview.widget.CardView
            android:id="@+id/back_btn"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp">
            <ImageView
                android:src="@drawable/ic_arrow_left"
                android:padding="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/title"
            app:layout_constraintLeft_toRightOf="@id/back_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/back_btn"
            app:layout_constraintTop_toTopOf="@id/back_btn"
            android:layout_marginHorizontal="@dimen/_7sdp"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/text_color"
            android:text="@string/comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toBottomOf="@id/cons_tool"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_product"
                android:scaleType="centerCrop"
                android:src="@drawable/a53"
               app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.6"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_150sdp"/>
            <TextView
                android:id="@+id/name_product"
                app:layout_constraintTop_toBottomOf="@id/image_product"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:textColor="@color/text_color"
                android:textStyle="normal"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/inter_medium"
                android:text="Samsung A53 Telofoni"
                android:gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/comment"
                android:textSize="@dimen/_10sdp"
                android:hint="Mahsulot haqida fikringiz"
                android:textColor="@color/text_color"
                android:textStyle="normal"
                android:gravity="left|top"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/inter_medium"
                app:layout_constraintTop_toBottomOf="@id/name_product"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.95"
                android:layout_marginTop="@dimen/_8sdp"
                android:minHeight="@dimen/_150sdp"
                android:background="@drawable/edite_text_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/rating_tv"
                app:layout_constraintLeft_toLeftOf="@id/comment"
                app:layout_constraintRight_toRightOf="@id/comment"
                app:layout_constraintTop_toBottomOf="@id/comment"
                android:layout_marginTop="@dimen/_8sdp"
                android:textStyle="normal"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12sdp"
                android:text="Mahsulotni baxolang"
                android:gravity="center"
                android:fontFamily="@font/inter_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rating"
                android:layout_marginTop="@dimen/_6sdp"
                app:layout_constraintTop_toBottomOf="@id/rating_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                android:progressTint="@color/app_background"
                android:progressBackgroundTint="@color/hintColor"
                android:secondaryProgressTint="@color/hintColor"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialRatingBar.RatingBar" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/comment_send"
                app:layout_constraintTop_toBottomOf="@id/rating"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/comment"
                app:layout_constraintRight_toRightOf="@id/comment"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:text="@string/comment"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/button_back"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>