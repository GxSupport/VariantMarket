<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_image"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_width="match_parent"
        app:cardElevation="0dp"
        android:layout_height="@dimen/_140sdp">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:id="@+id/image_data"
               android:src="@drawable/image_slide"
               android:scaleType="centerCrop"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>

           <com.github.ybq.android.spinkit.SpinKitView
               android:id="@+id/spin_kit"
               android:visibility="visible"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               style="@style/SpinKitView.Large.FadingCircle"
               android:layout_width="@dimen/_30sdp"
               android:layout_height="@dimen/_30sdp"
               android:layout_gravity="center"
               app:SpinKit_Color="@color/discount_color_pr" />

           <androidx.cardview.widget.CardView
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintHorizontal_bias="0.95"
               android:clickable="true"
               android:focusable="true"
               app:cardElevation="0dp"
               app:cardBackgroundColor="@color/card_like_pr"
               android:foreground="?attr/selectableItemBackgroundBorderless"
               app:layout_constraintVertical_bias="0.05"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:cardCornerRadius="@dimen/_12sdp"
               android:id="@+id/image_like"
               android:layout_width="@dimen/_23sdp"
               android:layout_height="@dimen/_23sdp">
               <ImageView
                   android:id="@+id/image"
                   android:padding="@dimen/_4sdp"
                   android:src="@drawable/ic_like"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"/>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:id="@+id/discount_card"
               android:visibility="gone"
               app:layout_constraintHorizontal_bias="0.05"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginHorizontal="@dimen/_5sdp"
               app:cardBackgroundColor="@color/discount_color_pr"
               app:cardCornerRadius="@dimen/_10sdp"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toLeftOf="@id/image_like"
               app:cardElevation="0dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintVertical_bias="0.05"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <androidx.appcompat.widget.LinearLayoutCompat
                   android:gravity="center"
                   android:layout_marginHorizontal="@dimen/_5sdp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:id="@+id/delivery"
                       android:src="@drawable/ic_delivery"
                       android:layout_width="@dimen/_15sdp"
                       android:layout_height="@dimen/_15sdp"/>
                   <TextView
                       android:id="@+id/percent"
                       android:layout_weight="1"
                       android:layout_marginVertical="@dimen/_3sdp"
                       android:textStyle="normal"
                       android:gravity="left|center"
                       android:textSize="@dimen/_9sdp"
                       android:textColor="@color/white"
                       android:textAllCaps="false"
                       android:fontFamily="@font/inter_medium"
                       android:text="15 % chegirma"
                       android:layout_marginStart="@dimen/_3sdp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </androidx.appcompat.widget.LinearLayoutCompat>
           </androidx.cardview.widget.CardView>
       </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/title"
        app:layout_constraintTop_toBottomOf="@id/card_image"
        app:layout_constraintLeft_toLeftOf="@id/card_image"
        app:layout_constraintRight_toRightOf="@id/card_image"
        android:layout_marginTop="@dimen/_7sdp"
        android:textColor="@color/text_color"
        android:text="Allen Solly Regular fit cotton shirt"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        android:fontFamily="@font/inter_light"
        android:maxLines="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/price"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="@id/title"
        android:textStyle="normal"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/text_color"
        android:text="1 345 000 so'm"
        android:layout_marginTop="@dimen/_6sdp"
        android:fontFamily="@font/inter_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_star"
        app:cardBackgroundColor="@color/star_color"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="@id/price"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp">

        <ImageView
            android:id="@+id/image_star"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_star_1" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/degree"
        app:layout_constraintTop_toTopOf="@id/card_star"
        app:layout_constraintLeft_toRightOf="@id/card_star"
        app:layout_constraintBottom_toBottomOf="@id/card_star"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        android:maxLines="1"
        android:textColor="@color/text_color"
        android:fontFamily="@font/inter_medium"
        android:textStyle="normal"
        android:text="4,2"
        android:textSize="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/views"
        app:layout_constraintTop_toTopOf="@id/degree"
        app:layout_constraintLeft_toRightOf="@id/degree"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/degree"
        app:layout_constraintHorizontal_bias="0.07"
        android:gravity="center"
        android:textSize="@dimen/_10sdp"
        android:textStyle="normal"
        android:textColor="@color/hintColor"
        android:fontFamily="@font/inter_light"
        android:text="(663)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>