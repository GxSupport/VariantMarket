<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bottom_sheet_dialog"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/_8sdp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_sort"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintHorizontal_bias="0.05"
            android:textColor="@color/text_color"
            android:text="Sort By"
            android:textSize="@dimen/_18sdp"
            android:textStyle="normal"
            android:fontFamily="@font/inter_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cancel"
            app:layout_constraintTop_toTopOf="@id/text_sort"
            app:layout_constraintLeft_toRightOf="@id/text_sort"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/text_sort"
            app:layout_constraintHorizontal_bias="0.96"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_width="30dp"
            android:layout_height="30dp">
            <ImageView
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sort"
            tools:listitem="@layout/item_sort"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/cancel"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>