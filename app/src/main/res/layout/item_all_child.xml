<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/image_item_layout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/image_item_card"
                    android:minHeight="@dimen/_100sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130sdp"
                    tools:targetApi="p">
                    <ImageView
                        android:id="@+id/image_item"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_slide"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.95"
                    app:layout_constraintVertical_bias="0.05"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:id="@+id/image_like"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardBackgroundColor="@color/card_like_pr"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp">
                    <ImageView
                        android:padding="@dimen/_4sdp"
                        android:id="@+id/image_like_data"
                        android:src="@drawable/ic_like"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/text_top"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="@id/image_like"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/image_like"
                    app:layout_constraintRight_toLeftOf="@id/image_like"
                    app:layout_constraintHorizontal_bias="0.1"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:background="@drawable/discount_image_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon_deliver"
                        android:src="@drawable/ic_delivery"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"/>
                    <TextView
                        android:id="@+id/text_item"
                        android:textStyle="normal"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/inter_medium"
                        android:text="15 % chegirma"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/title"
                android:paddingHorizontal="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@id/image_item_layout"
                app:layout_constraintLeft_toLeftOf="@id/image_item_layout"
                app:layout_constraintRight_toRightOf="@id/image_item_layout"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="Dostonbek Eshmurodov"
                android:maxLines="2"

                android:textSize="@dimen/_9sdp"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="@color/main_item_title_color"
                android:fontFamily="@font/inter_light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/summa"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:text="1 600 000 so'm"
                android:textStyle="normal"
                android:textSize="@dimen/_8sdp"
                android:maxLines="2"
                android:textColor="@color/text_gray_color"
                android:ellipsize="end"
                android:fontFamily="@font/inter_medium"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_height="wrap_content"/>
            <View
                app:layout_constraintVertical_bias="0.55"
                app:layout_constraintTop_toTopOf="@id/summa"
                app:layout_constraintBottom_toBottomOf="@id/summa"
                app:layout_constraintLeft_toLeftOf="@id/summa"
                app:layout_constraintRight_toRightOf="@id/summa"
                android:background="@color/text_gray_color"
                android:layout_width="0dp"
                android:layout_height="0.5dp"/>
            <TextView
                android:id="@+id/price"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:maxLines="2"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:ellipsize="end"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="@dimen/_10sdp"
                android:text="1 400 000 so'm"
                app:layout_constraintTop_toBottomOf="@id/summa"
                app:layout_constraintLeft_toLeftOf="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>