<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_80sdp" />
            <solid android:color="#60B5B2B2" />
            <stroke android:color="#60B5B2B2" android:width="1dp"/>
            <size android:height="@dimen/_10sdp" android:width="@dimen/_20sdp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_80sdp" />
            <solid android:color="@color/item_color" />
            <stroke android:color="#8c8c8c" android:width="1dp"/>
            <size android:height="@dimen/_10sdp"  android:width="@dimen/_20sdp"/>
        </shape>
    </item>
</selector>