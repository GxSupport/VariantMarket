        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/app_background</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/app_background</item>
        <item name="colorPrimaryInverse">@color/white</item>
        <item name="colorOnSurfaceInverse">@color/white</item>
